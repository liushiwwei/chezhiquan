<!--pages/login/login.wxml-->
<view class='bigbg' style='background-color:#032754;background-size:100% 100%;'>
  <!-- logo -->
  <view class='logo'>
    <image style='width:100%;height:100%;' src="/images/injoylogo.png"></image>
  </view>
  <!-- 账号密码框 -->
  <view class='loging'>
    <view class='user'>
      <image src='/images/USERicon.png'></image>
      <input class="umobil" auto-focus placeholder="手机号码" placeholder-class='lolol' maxlength="11" bindinput='mobilusr'></input>
    </view>
    <view class='password'>
      <image src='/images/PASSicon.png'></image>
      <input class="logpass" password type="text" placeholder="密码"  placeholder-class='lolol' bindinput='mobilusr'/>
    </view>
  </view>
  <!-- 登录按钮 -->
  <view class='loginBtn'>
    <text class='btnTex' bindtap='retrieve'>忘记密码?</text>
    <button>登录</button>
  </view>
  <!-- 新用户注册 -->
  <view class='register'>
    <navigator url="/pages/register/register?title=navigate" hover-class="navigator-hover">新用户注册
    </navigator>
  </view>
</view>