/* pages/mysafe/mysafe.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: #f6f6f6;
}
/* 页面上面的两个横向选择条的动画样式 */
.weui-navbar{
  margin-top: 5rpx;
  background-color: #fff;
  border: none;
}
.weui-navbar .weui-navbar__item {
  font-size: 26rpx;
  color: #000;
  padding-top: 10rpx;
  padding-bottom: 8rpx;
  width: 125rpx;
}
.weui-navbar .weui-navbar__slider {
  background-color: #4bc4f7;
  width:110rpx;
}

 .weui-navbar__item .weui-navbar__title {
  font-size: 26rpx;
}

.weui-tab__panel .weui-tab__content{
  width: 750rpx;
  min-height: 100%;
}
/*  */
.love {
  width: 270rpx;
  height: 65rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #bbb;
  margin: 0 auto;
  margin-top: 250rpx;
}

.love .lo {
  margin-bottom: 18rpx;
}

.dog {
  width: 156rpx;
  height: 110rpx;
  margin: 0 auto;
  margin-top: 120rpx;
}

.dog image {
  width: 156rpx;
  height: 110rpx;
}


.list{
  width: 711rpx;
  min-height: 100%;
  background-color: #fff;
  /* padding-top: 35rpx; */
  padding-left: 39rpx;
}

 .tx5{
  width: 400rpx;
  height: 38rpx;
  font-size: 38rpx;
  line-height: 38rpx;
  font-weight: bold;
}

 .insurance{
  width: 675rpx;
  height: 150rpx;
  border-bottom: 1rpx solid #D8D8D8;
  position: relative;
  padding-top: 34rpx;
  padding-bottom: 34rpx;
}

 .insurance .left{
  width: 250rpx;
  height: 150rpx;
  position: absolute;
}
 .insurance .left image{
  width: 100%;
  height: 100%;
}

 .right{
  width: 425rpx;
  height: 150rpx;
  position: absolute;
  right: 0;
}

 .right .name{
  font-size: 32rpx;
  line-height: 32rpx;
  display: block;
  margin-left: 33rpx;
  margin-top: 15rpx;
}

 .right .lists{
  font-size: 22rpx;
  line-height: 22rpx;
  color: #999;
  margin-left: 38rpx;
  margin-top: 22rpx;
}
 .right .price{
    font-size: 26rpx;
  line-height: 26rpx;
  color: #F97C4A;
  margin-left: 38rpx;
  margin-top: 30rpx;
}
 .right .mold{
  width: 120rpx;
  height: 29rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  border: 2rpx solid #4FA9FF;
  border-radius: 7rpx;
  text-align: center;
  padding-top: 6rpx;
  color: #4FA9FF;
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
}