/* pages/insurance/insurance.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: #f6f6f6;
}

/* 上面推荐区域 */
.groom{
  width: 682rpx;
  height: 408rpx;
  background-color: #fff;
  position: relative; 
  padding: 35rpx 35rpx 56rpx 35rpx;
  border: none;
}

.groom .tuijian{
  font-size: 38rpx;
  line-height: 38rpx;
  font-weight: bold;
}
.groom .content{
  width: 683rpx;
  height: 346rpx;
  box-shadow: 0 0 15rpx #999;
  margin-top: 37rpx;
}

.groom .content .left{
  display: inline-block;
  width: 250rpx;
  height: 346rpx;
}

.groom .content .left image{
  width: 100%;
  height: 100%;
}

.groom .content .right{
  width: 433rpx;
  height: 346rpx;
  display: inline-block;
  position: absolute;
}

.groom .content .right .tx1{
  font-size: 32rpx;
  line-height: 32rpx;
  margin-left: 40rpx;
  margin-top: 53rpx;
}

.groom .content .right .tx2{
  font-size: 23rpx;
  line-height: 23rpx;
  color: #999;
  margin-left: 40rpx;
  margin-top: 35rpx;
}

.groom .content .right .tx3{
  font-size: 26rpx;
  line-height: 26rpx;
  color: #F97C4A;
  margin-left: 40rpx;
  position: absolute;
  bottom: 46rpx;
}

.groom .content .right .tx4{
  width: 120rpx;
  height: 29rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  border: 2rpx solid #4FA9FF;
  border-radius: 7rpx;
  text-align: center;
  padding-top: 6rpx;
  color: #4FA9FF;
  position: absolute;
  bottom: 38rpx;
  right: 37rpx;
}

/* 下面保险列表部分 */
.list{
  width: 750rpx;
  min-height: 100%;
  background-color: #fff;
  margin-top: 15rpx;
  padding-top: 35rpx;
  padding-left: 39rpx;
  padding-right: 39rpx;
}

.list .tx5{
  width: 100%;
  height: 38rpx;
  font-size: 38rpx;
  line-height: 38rpx;
  font-weight: bold;
}

.list .insurance{
  width: 675rpx;
  height: 150rpx;
  border-bottom: 1rpx solid #D8D8D8;
  position: relative;
  padding-top: 34rpx;
  padding-bottom: 34rpx;
}

.list .insurance .left{
  width: 250rpx;
  height: 150rpx;
  position: absolute;
}
.list .insurance .left image{
  width: 100%;
  height: 100%;
}

.list .right{
  width: 425rpx;
  height: 150rpx;
  position: absolute;
  right: 0;
}

.list .right .name{
  font-size: 32rpx;
  line-height: 32rpx;
  display: block;
  margin-left: 33rpx;
  margin-top: 15rpx;
}

.list .right .lists{
  font-size: 22rpx;
  line-height: 22rpx;
  color: #999;
  margin-left: 38rpx;
  margin-top: 22rpx;
}
.list .right .price{
    font-size: 26rpx;
  line-height: 26rpx;
  color: #F97C4A;
  margin-left: 38rpx;
  margin-top: 30rpx;
}
.list .right .mold{
  width: 120rpx;
  height: 29rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  border: 2rpx solid #4FA9FF;
  border-radius: 7rpx;
  text-align: center;
  padding-top: 6rpx;
  color: #4FA9FF;
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
}