/* pages/serve/serve.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: #f6f6f6;
}
/* 头部导航的样式 */

.nav {
  width: 700rpx;
  height: 200rpx;
  margin: 0 auto;
  background-color: #fff;
  justify-content: space-around;
}

.nav .nav_top {
  width: 110rpx;
  height: 110rpx;
  text-align: center;
}

.nav .nav_top text {
  font-size: 26rpx;
  line-height: 26rpx;
  color: #666;
  font-weight: 400;
}

.nav .nav_top image {
  width: 100%;
  height: 100%;
}

/* 中奖流量 电话报警的 */

.fluxc {
  width: 750rpx;
  height: 226rpx;
  background-color: #f6f6f6;
  display: flex;
  justify-content: space-around;
}

/* 两个白色背景盒子 */

.fluxc .block {
  width: 350rpx;
  height: 156rpx;
  background-color: #fff;
  margin-top: 38rpx;
  position: relative;
}

/* 两个标签盒子 */

.fluxc .block .topImg {
  width: 88rpx;
  height: 45rpx;
  /* background-color: red; */
  position: absolute;
  left: 18rpx;
  top: -10rpx;
}

.fluxc .block .topImg text {
  position: absolute;
  top: 0;
  font-size: 22rpx;
  line-height: 22rpx;
  color: #fff;
  padding-top: 10rpx;
  padding-left: 22rpx;
}

/* 两个大字体 */

.fluxc .block .weight {
  font-size: 34rpx;
  line-height: 34rpx;
  font-weight: bold;
  position: absolute;
  margin-top: 45rpx;
  margin-left: 21rpx;
}

/* 带边框的小字体 */

.fluxc .block .llcz {
  border: 2rpx solid #666;
  font-size: 23rpx;
  line-height: 23rpx;
  padding: 5rpx 5rpx;
  color: #666;
  position: absolute;
  top: 100rpx;
  left: 25rpx;
}

/* 图标 */

.fluxc .block .rigImg {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: 23rpx;
  right: 27rpx;
  /* background-color: red; */
}

/* 服务工单 */

.server {
  position: relative;
}

.server .gongdan {
  font-size: 32rpx;
  line-height: 32rpx;
  margin-left: 35rpx;
  margin-top: 18rpx;
}

.server .weui-navbar {
  position: absolute;
  top: 50rpx;
}

.server .weui-navbar .weui-navbar__item {
  font-size: 26rpx;
  color: #000;
  padding-top: 10rpx;
  padding-bottom: 8rpx;
  width: 125rpx;
}

/* //下划线的样式 */

.server .weui-navbar .weui-navbar__slider {
  background-color: #4bc4f7;
  width: 79rpx;
}

.server .weui-navbar__item .weui-navbar__title {
  font-size: 26rpx;
}

/* 服务单下面部分 */

.sss {
  width: 750rpx;
  height: 285rpx;
  background-color: #f6f6f6;
}

.server .weui-tab__panel {
  margin: 70rpx auto 20rpx;
  width: 720rpx;
  height: 285rpx;
  padding: 0 0;
  background-color: #fff;
}

/* 已下单部分 */

.weui-tab__content .top {
  height: 47rpx;
  display: flex;
  justify-content: space-between;
  padding: 6rpx;
  align-items: center;
  border-bottom: 1px solid #f6f6f6;
}

.weui-tab__content .top .left {
  font-size: 27rpx;
  line-height: 27rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.weui-tab__content .top .right {
  font-size: 27rpx;
  line-height: 27rpx;
  color: #4bc4f7;
  margin-right: 10rpx;
}

/* 下单信息部分 */

.weui-tab__content .mid {
  height: 158rpx;
  width: 720rpx;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.weui-tab__content image {
  width: 240rpx;
  height: 130rpx;
  margin-right: 20rpx;
}

.weui-tab__content .mid .txtop {
  font-size: 27rpx;
  line-height: 27rpx;
  margin-left: 260rpx;
  margin-top: -130rpx;
}

.weui-tab__content .mid .txmid {
  font-size: 27rpx;
  line-height: 27rpx;
  color: #b0b0b0;
  margin-left: 260rpx;
  margin-top: 10rpx;
}

.weui-tab__content .mid .txbot {
  font-size: 27rpx;
  line-height: 27rpx;
  color: #999;
  margin-left: 260rpx;
  margin-top: 45rpx;
}

/* 查看更多部分 */

.weui-tab__content .bot {
  font-size: 25rpx;
  line-height: 25rpx;
  text-align: center;
  border-top: 1px solid #f6f6f6;
  padding-top: 10rpx;
}

/* 附近门店部分 */

.server .store {
  width: 750rpx;
  height: 210rpx;
  background-color: #f6f6f6;
}

.server .store .sleft {
  font-size: 32rpx;
  line-height: 30rpx;
  position: absolute;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.server .store .sright {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #4bc4f7;
  position: absolute;
  right: 35rpx;
  margin-top: 20rpx;
}

.server .store .botmap{
  width: 720rpx;
  height: 160rpx;
  margin-top: 68rpx;
  margin-left: 15rpx;
}

.server .store .mapimg{
  width: 650rpx;
  height: 110rpx;
  background-color: #fff;
  position: absolute;
  margin-top: -150rpx;
  left: 50rpx;
  border-radius: 10rpx;
}

.server .store .mapimg image{
  width: 120rpx;
  height: 80rpx;
  margin-left: 25rpx;
  margin-top: 15rpx;
}
.server .store .mapimg text{
  font-size: 28rpx;
  position: absolute;
  top: 20rpx;
  margin-left: 10rpx;
}
.server .store .dingwei{
  width: 62rpx;
  height: 62rpx;
  position: absolute;
  margin-top: 110rpx;
  right: 82rpx;
}
